<Window x:Class="DuplicateFinderMulti.Views.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Multi-DF" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" ShowInTaskbar="False"
        SizeToContent="WidthAndHeight" MaxWidth="400" MaxHeight="400"
        FocusManager.FocusedElement="{Binding ElementName=txtValue}">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>

    <TextBlock x:Name="lblDescription" Text="Enter value:" Margin="6" Grid.ColumnSpan="2" TextWrapping="Wrap" />
    <TextBox x:Name="txtValue" Grid.Row="1" MinWidth="200" Margin="6" Padding="6,3" FontSize="12" Grid.ColumnSpan="2" />

    <Button Content="OK" Grid.Row="2" Grid.Column="0" Width="70" Margin="6" HorizontalAlignment="Right" Click="OK_Click" IsDefault="True" />
    <Button Content="Cancel" Grid.Row="2" Grid.Column="1" Width="70" Margin="6" HorizontalAlignment="Left" Click="Cancel_Click" IsCancel="True" />
  </Grid>
</Window>